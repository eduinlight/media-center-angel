extends layout

block styles
  link(rel='stylesheet', href='/styles/styles.css')
  link(rel='stylesheet', href='/styles/media.css')

block content
  div(class='page')
    h1= title
    if type == 'video'
      video(controls src=Url)
        each subtitle in subtitles
          track(src=subtitle.url label=subtitle.label)
    else 
      audio(controls src=Url)
    